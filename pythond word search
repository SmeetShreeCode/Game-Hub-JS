‚ú® Step 3: Full OCR Python Script (Gujarati Supported)
import os
import pdfplumber
import pytesseract
from pdf2image import convert_from_path
from PIL import Image

# Set Tesseract path manually (only needed for Windows)
# Example: r"C:\Program Files\Tesseract-OCR\tesseract.exe"
pytesseract.pytesseract.tesseract_cmd = r"C:\Program Files\Tesseract-OCR\tesseract.exe"

def extract_text_with_ocr(pdf_path, keyword):
    """Extract text using normal extraction + OCR."""
    keyword = keyword.lower()

    try:
        # 1. Try normal text extraction first
        with pdfplumber.open(pdf_path) as pdf:
            for page in pdf.pages:
                text = page.extract_text()
                if text and keyword in text.lower():
                    return True

        # 2. OCR: Convert PDF pages to images
        images = convert_from_path(pdf_path, dpi=300)

        for img in images:
            # Apply OCR with Gujarati + English
            text = pytesseract.image_to_string(img, lang="guj+eng")
            if text and keyword in text.lower():
                return True

    except Exception as e:
        print(f"Error reading {pdf_path}: {e}")

    return False


def search_pdf_folder(folder_path, keyword):
    found_files = []

    for filename in os.listdir(folder_path):
        if filename.endswith(".pdf"):
            pdf_path = os.path.join(folder_path, filename)
            print(f"Checking: {filename}")

            if extract_text_with_ocr(pdf_path, keyword):
                found_files.append(filename)

    return found_files


if __name__ == "__main__":
    folder = input("Enter the folder path: ")
    word = input("Enter the word to search: ")

    print("\nSearching... Please wait (OCR may take time)...\n")

    results = search_pdf_folder(folder, word)

    if results:
        print("\nWord found in these PDF files:\n")
        for file in results:
            print(" -", file)
    else:
        print("No PDF contains this word.")

